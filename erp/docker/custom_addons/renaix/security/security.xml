<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Categoría de Módulo -->
        <record id="module_category_renaix" model="ir.module.category">
            <field name="name">Renaix</field>
            <field name="description">Gestión del Marketplace Renaix</field>
            <field name="sequence">20</field>
        </record>

        <!-- Grupo: Usuario (Solo lectura - para consultas) -->
        <record id="group_renaix_user" model="res.groups">
            <field name="name">Usuario</field>
            <field name="category_id" ref="module_category_renaix"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Puede ver productos, categorías y etiquetas</field>
        </record>

        <!-- Grupo: Moderador (Gestionar productos, denuncias, comentarios) -->
        <record id="group_renaix_moderador" model="res.groups">
            <field name="name">Moderador</field>
            <field name="category_id" ref="module_category_renaix"/>
            <field name="implied_ids" eval="[(4, ref('group_renaix_user'))]"/>
            <field name="comment">Puede moderar productos, eliminar comentarios y gestionar denuncias</field>
        </record>

        <!-- Grupo: Administrador (Control total) -->
        <record id="group_renaix_admin" model="res.groups">
            <field name="name">Administrador</field>
            <field name="category_id" ref="module_category_renaix"/>
            <field name="implied_ids" eval="[(4, ref('group_renaix_moderador'))]"/>
            <field name="comment">Control total sobre el sistema Renaix</field>
        </record>

        <!-- ================================ -->
        <!-- REGLAS DE REGISTRO (Record Rules) -->
        <!-- ================================ -->
        
        <!-- CATEGORÍAS -->
        <record id="categoria_user_rule" model="ir.rule">
            <field name="name">Categoría: Usuario puede ver activas</field>
            <field name="model_id" ref="model_renaix_categoria"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_renaix_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="categoria_admin_rule" model="ir.rule">
            <field name="name">Categoría: Admin puede gestionar todas</field>
            <field name="model_id" ref="model_renaix_categoria"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_renaix_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ETIQUETAS -->
        <record id="etiqueta_user_rule" model="ir.rule">
            <field name="name">Etiqueta: Usuario puede ver activas</field>
            <field name="model_id" ref="model_renaix_etiqueta"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_renaix_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="etiqueta_admin_rule" model="ir.rule">
            <field name="name">Etiqueta: Admin puede gestionar todas</field>
            <field name="model_id" ref="model_renaix_etiqueta"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_renaix_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- PRODUCTOS -->
        <record id="producto_user_rule" model="ir.rule">
            <field name="name">Producto: Usuario puede ver disponibles y publicados</field>
            <field name="model_id" ref="model_renaix_producto"/>
            <field name="domain_force">[('active', '=', True), ('estado_venta', 'in', ['disponible', 'reservado', 'vendido'])]</field>
            <field name="groups" eval="[(4, ref('group_renaix_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="producto_moderador_rule" model="ir.rule">
            <field name="name">Producto: Moderador puede gestionar todos</field>
            <field name="model_id" ref="model_renaix_producto"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_renaix_moderador'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- COMENTARIOS -->
        <record id="comentario_user_rule" model="ir.rule">
            <field name="name">Comentario: Usuario puede ver activos</field>
            <field name="model_id" ref="model_renaix_comentario"/>
            <field name="domain_force">[('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_renaix_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="comentario_moderador_rule" model="ir.rule">
            <field name="name">Comentario: Moderador puede gestionar todos (incluidos inactivos)</field>
            <field name="model_id" ref="model_renaix_comentario"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_renaix_moderador'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- DENUNCIAS -->
        <record id="denuncia_moderador_rule" model="ir.rule">
            <field name="name">Denuncia: Moderador puede gestionar todas</field>
            <field name="model_id" ref="model_renaix_denuncia"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_renaix_moderador'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- MENSAJES -->
        <record id="mensaje_user_rule" model="ir.rule">
            <field name="name">Mensaje: Usuario puede gestionar todos</field>
            <field name="model_id" ref="model_renaix_mensaje"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_renaix_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- COMPRAS -->
        <record id="compra_user_rule" model="ir.rule">
            <field name="name">Compra: Usuario puede ver todas</field>
            <field name="model_id" ref="model_renaix_compra"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_renaix_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="compra_moderador_rule" model="ir.rule">
            <field name="name">Compra: Moderador puede gestionar todas</field>
            <field name="model_id" ref="model_renaix_compra"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_renaix_moderador'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- VALORACIONES -->
        <record id="valoracion_user_rule" model="ir.rule">
            <field name="name">Valoración: Usuario puede ver todas</field>
            <field name="model_id" ref="model_renaix_valoracion"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_renaix_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="valoracion_moderador_rule" model="ir.rule">
            <field name="name">Valoración: Moderador puede gestionar todas</field>
            <field name="model_id" ref="model_renaix_valoracion"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_renaix_moderador'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
