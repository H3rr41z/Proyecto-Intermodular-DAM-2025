<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Plantilla QWeb del Informe -->
    <template id="report_partner_activity_document">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="partner">
                <div class="page">
                    <!-- Encabezado -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h2 class="text-center">
                                <i class="fa fa-user-circle"></i>
                                Informe de Actividad de Usuario
                            </h2>
                            <h3 class="text-center text-muted">
                                <t t-esc="partner.name"/>
                            </h3>
                            <p class="text-center text-muted">
                                Fecha de generación: <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/>
                            </p>
                        </div>
                    </div>
                    
                    <hr class="mb-4"/>
                    
                    <!-- Información del Usuario -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h4 class="mb-3">
                                <i class="fa fa-info-circle"></i> Información del Usuario
                            </h4>
                            <table class="table table-sm table-bordered">
                                <tr>
                                    <td class="text-end" style="width: 30%;"><strong>Nombre:</strong></td>
                                    <td><t t-esc="partner.name"/></td>
                                </tr>
                                <tr>
                                    <td class="text-end"><strong>Email:</strong></td>
                                    <td><t t-esc="partner.email or 'No especificado'"/></td>
                                </tr>
                                <tr>
                                    <td class="text-end"><strong>Teléfono:</strong></td>
                                    <td><t t-esc="partner.phone or 'No especificado'"/></td>
                                </tr>
                                <tr t-if="partner.es_usuario_app">
                                    <td class="text-end"><strong>Fecha de Registro:</strong></td>
                                    <td><t t-esc="partner.fecha_registro_app.strftime('%d/%m/%Y') if partner.fecha_registro_app else 'N/A'"/></td>
                                </tr>
                                <tr t-if="partner.es_usuario_app">
                                    <td class="text-end"><strong>Estado de Cuenta:</strong></td>
                                    <td>
                                        <span t-if="partner.cuenta_activa" class="badge bg-success">Activa</span>
                                        <span t-else="" class="badge bg-danger">Inactiva</span>
                                    </td>
                                </tr>
                                <tr t-if="partner.es_usuario_app">
                                    <td class="text-end"><strong>Valoración Promedio:</strong></td>
                                    <td>
                                        <t t-if="partner.valoracion_promedio > 0">
                                            <t t-esc="'%.1f' % partner.valoracion_promedio"/> / 5.0
                                            <span class="text-warning">
                                                <t t-foreach="range(int(partner.valoracion_promedio))" t-as="star">★</t>
                                            </span>
                                        </t>
                                        <t t-else="">Sin valoraciones</t>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    
                    <!-- Estadísticas Generales -->
                    <div class="row mb-4" t-if="partner.es_usuario_app">
                        <div class="col-12">
                            <h4 class="mb-3">
                                <i class="fa fa-bar-chart"></i> Estadísticas
                            </h4>
                            <div class="row text-center">
                                <div class="col-3">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h1 class="text-primary"><t t-esc="partner.productos_en_venta"/></h1>
                                            <p class="text-muted mb-0">Productos en Venta</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h1 class="text-success"><t t-esc="partner.productos_vendidos"/></h1>
                                            <p class="text-muted mb-0">Productos Vendidos</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h1 class="text-info"><t t-esc="partner.productos_comprados"/></h1>
                                            <p class="text-muted mb-0">Productos Comprados</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h1 class="text-warning"><t t-esc="partner.total_comentarios"/></h1>
                                            <p class="text-muted mb-0">Comentarios Realizados</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Productos Publicados -->
                    <div class="row mb-4" t-if="partner.producto_ids">
                        <div class="col-12">
                            <h4 class="mb-3">
                                <i class="fa fa-shopping-cart"></i> Productos Publicados
                                (<t t-esc="len(partner.producto_ids)"/>)
                            </h4>
                            <table class="table table-sm table-bordered table-striped">
                                <thead class="table-primary">
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Precio</th>
                                        <th>Estado</th>
                                        <th>Comentarios</th>
                                        <th>Fecha Publicación</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="partner.producto_ids[:10]" t-as="producto">
                                        <tr>
                                            <td><t t-esc="producto.name"/></td>
                                            <td class="text-end">
                                                <t t-esc="'%.2f' % producto.precio"/> €
                                            </td>
                                            <td>
                                                <span t-if="producto.estado_venta == 'disponible'" class="badge bg-success">Disponible</span>
                                                <span t-elif="producto.estado_venta == 'reservado'" class="badge bg-warning">Reservado</span>
                                                <span t-elif="producto.estado_venta == 'vendido'" class="badge bg-info">Vendido</span>
                                                <span t-else="" class="badge bg-secondary"><t t-esc="producto.estado_venta"/></span>
                                            </td>
                                            <td class="text-center"><t t-esc="producto.total_comentarios"/></td>
                                            <td><t t-esc="producto.fecha_publicacion.strftime('%d/%m/%Y') if producto.fecha_publicacion else 'N/A'"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <p t-if="len(partner.producto_ids) > 10" class="text-muted text-center">
                                <em>Mostrando los primeros 10 productos de <t t-esc="len(partner.producto_ids)"/> totales</em>
                            </p>
                        </div>
                    </div>
                    
                    <!-- Compras Realizadas -->
                    <div class="row mb-4" t-if="partner.compra_comprador_ids">
                        <div class="col-12">
                            <h4 class="mb-3">
                                <i class="fa fa-shopping-bag"></i> Compras Realizadas
                                (<t t-esc="len(partner.compra_comprador_ids)"/>)
                            </h4>
                            <table class="table table-sm table-bordered table-striped">
                                <thead class="table-success">
                                    <tr>
                                        <th>Código</th>
                                        <th>Producto</th>
                                        <th>Vendedor</th>
                                        <th>Precio</th>
                                        <th>Estado</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="partner.compra_comprador_ids[:10]" t-as="compra">
                                        <tr>
                                            <td><t t-esc="compra.codigo"/></td>
                                            <td><t t-esc="compra.producto_id.name"/></td>
                                            <td><t t-esc="compra.vendedor_id.name"/></td>
                                            <td class="text-end">
                                                <t t-esc="'%.2f' % compra.precio_final"/> €
                                            </td>
                                            <td>
                                                <span t-if="compra.estado == 'completada'" class="badge bg-success">Completada</span>
                                                <span t-elif="compra.estado == 'confirmada'" class="badge bg-info">Confirmada</span>
                                                <span t-elif="compra.estado == 'pendiente'" class="badge bg-warning">Pendiente</span>
                                                <span t-else="" class="badge bg-secondary"><t t-esc="compra.estado"/></span>
                                            </td>
                                            <td><t t-esc="compra.fecha_compra.strftime('%d/%m/%Y') if compra.fecha_compra else 'N/A'"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <p t-if="len(partner.compra_comprador_ids) > 10" class="text-muted text-center">
                                <em>Mostrando las primeras 10 compras de <t t-esc="len(partner.compra_comprador_ids)"/> totales</em>
                            </p>
                        </div>
                    </div>
                    
                    <!-- Ventas Realizadas -->
                    <div class="row mb-4" t-if="partner.compra_vendedor_ids">
                        <div class="col-12">
                            <h4 class="mb-3">
                                <i class="fa fa-money"></i> Ventas Realizadas
                                (<t t-esc="len(partner.compra_vendedor_ids)"/>)
                            </h4>
                            <table class="table table-sm table-bordered table-striped">
                                <thead class="table-info">
                                    <tr>
                                        <th>Código</th>
                                        <th>Producto</th>
                                        <th>Comprador</th>
                                        <th>Precio</th>
                                        <th>Estado</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="partner.compra_vendedor_ids[:10]" t-as="venta">
                                        <tr>
                                            <td><t t-esc="venta.codigo"/></td>
                                            <td><t t-esc="venta.producto_id.name"/></td>
                                            <td><t t-esc="venta.comprador_id.name"/></td>
                                            <td class="text-end">
                                                <t t-esc="'%.2f' % venta.precio_final"/> €
                                            </td>
                                            <td>
                                                <span t-if="venta.estado == 'completada'" class="badge bg-success">Completada</span>
                                                <span t-elif="venta.estado == 'confirmada'" class="badge bg-info">Confirmada</span>
                                                <span t-elif="venta.estado == 'pendiente'" class="badge bg-warning">Pendiente</span>
                                                <span t-else="" class="badge bg-secondary"><t t-esc="venta.estado"/></span>
                                            </td>
                                            <td><t t-esc="venta.fecha_compra.strftime('%d/%m/%Y') if venta.fecha_compra else 'N/A'"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <p t-if="len(partner.compra_vendedor_ids) > 10" class="text-muted text-center">
                                <em>Mostrando las primeras 10 ventas de <t t-esc="len(partner.compra_vendedor_ids)"/> totales</em>
                            </p>
                        </div>
                    </div>
                    
                    <!-- Valoraciones Recibidas -->
                    <div class="row mb-4" t-if="partner.valoracion_ids">
                        <div class="col-12">
                            <h4 class="mb-3">
                                <i class="fa fa-star"></i> Valoraciones Recibidas
                                (<t t-esc="len(partner.valoracion_ids)"/>)
                            </h4>
                            <table class="table table-sm table-bordered table-striped">
                                <thead class="table-warning">
                                    <tr>
                                        <th>De</th>
                                        <th>Puntuación</th>
                                        <th>Comentario</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="partner.valoracion_ids[:10]" t-as="valoracion">
                                        <tr>
                                            <td><t t-esc="valoracion.usuario_valorador_id.name"/></td>
                                            <td>
                                                <span class="text-warning">
                                                    <t t-foreach="range(valoracion.puntuacion)" t-as="star">★</t>
                                                </span>
                                                (<t t-esc="valoracion.puntuacion"/>/5)
                                            </td>
                                            <td><t t-esc="valoracion.comentario or 'Sin comentario'"/></td>
                                            <td><t t-esc="valoracion.fecha.strftime('%d/%m/%Y') if valoracion.fecha else 'N/A'"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <p t-if="len(partner.valoracion_ids) > 10" class="text-muted text-center">
                                <em>Mostrando las primeras 10 valoraciones de <t t-esc="len(partner.valoracion_ids)"/> totales</em>
                            </p>
                        </div>
                    </div>
                    
                    <!-- Pie del Informe -->
                    <div class="row mt-5">
                        <div class="col-12">
                            <hr/>
                            <p class="text-center text-muted">
                                <small>
                                    Este informe fue generado automáticamente por el sistema Renaix.
                                    <br/>
                                    Documento confidencial - Uso interno únicamente.
                                </small>
                            </p>
                        </div>
                    </div>
                    
                </div>
            </t>
        </t>
    </template>
    
    <!-- Definición del Informe -->
    <record id="action_report_partner_activity" model="ir.actions.report">
        <field name="name">Informe de Actividad de Usuario</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">renaix.report_partner_activity_document</field>
        <field name="report_file">renaix.report_partner_activity_document</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>
    
</odoo>
