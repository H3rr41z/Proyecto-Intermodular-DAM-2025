<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista Tree de Compras -->
    <record id="view_compra_tree" model="ir.ui.view">
        <field name="name">renaix.compra.tree</field>
        <field name="model">renaix.compra</field>
        <field name="arch" type="xml">
            <tree string="Compras">
                <field name="codigo"/>
                <field name="producto_nombre"/>
                <field name="comprador_nombre"/>
                <field name="vendedor_nombre"/>
                <field name="precio_final" widget="monetary"/>
                <field name="fecha_compra"/>
                <field name="estado" decoration-success="estado=='completada'" 
                       decoration-warning="estado=='pendiente'"
                       decoration-info="estado=='confirmada'"
                       widget="badge"/>
                <field name="comprador_valoro" widget="boolean_toggle"/>
                <field name="vendedor_valoro" widget="boolean_toggle"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form de Compras -->
    <record id="view_compra_form" model="ir.ui.view">
        <field name="name">renaix.compra.form</field>
        <field name="model">renaix.compra</field>
        <field name="arch" type="xml">
            <form string="Compra">
                <header>
                    <field name="estado" widget="statusbar" 
                           statusbar_visible="pendiente,confirmada,completada"/>
                    <button name="action_confirmar" 
                            type="object" 
                            string="Confirmar Compra" 
                            class="oe_highlight"
                            invisible="estado != 'pendiente'"/>
                    <button name="action_completar" 
                            type="object" 
                            string="Completar Transacción" 
                            class="oe_highlight"
                            invisible="estado not in ['pendiente', 'confirmada']"/>
                    <button name="action_cancelar" 
                            type="object" 
                            string="Cancelar" 
                            confirm="¿Está seguro de cancelar esta compra?"
                            invisible="estado == 'completada'"/>
                    <button name="action_solicitar_valoraciones" 
                            type="object" 
                            string="Solicitar Valoraciones"
                            invisible="estado != 'completada'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="codigo" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Producto">
                            <field name="producto_id" 
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="precio_final" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Participantes">
                            <field name="comprador_id" 
                                   options="{'no_create': True}"/>
                            <field name="vendedor_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Fechas">
                            <field name="fecha_compra"/>
                        </group>
                        <group string="Valoraciones">
                            <field name="comprador_valoro" widget="boolean_toggle"/>
                            <field name="vendedor_valoro" widget="boolean_toggle"/>
                        </group>
                    </group>
                    
                    <group string="Notas">
                        <field name="notas" nolabel="1" 
                               placeholder="Notas sobre la transacción..."/>
                    </group>
                    
                    <notebook>
                        <page string="Valoraciones del Comprador" 
                              invisible="not valoracion_comprador_ids">
                            <field name="valoracion_comprador_ids" readonly="1">
                                <tree>
                                    <field name="puntuacion" widget="priority"/>
                                    <field name="comentario"/>
                                    <field name="fecha"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Valoraciones del Vendedor" 
                              invisible="not valoracion_vendedor_ids">
                            <field name="valoracion_vendedor_ids" readonly="1">
                                <tree>
                                    <field name="puntuacion" widget="priority"/>
                                    <field name="comentario"/>
                                    <field name="fecha"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Kanban de Compras -->
    <record id="view_compra_kanban" model="ir.ui.view">
        <field name="name">renaix.compra.kanban</field>
        <field name="model">renaix.compra</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="codigo"/>
                <field name="producto_nombre"/>
                <field name="comprador_nombre"/>
                <field name="vendedor_nombre"/>
                <field name="precio_final"/>
                <field name="estado"/>
                <field name="fecha_compra"/>
                <field name="currency_id"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <strong><field name="codigo"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="producto_nombre"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><i class="fa fa-shopping-bag"/> <field name="comprador_nombre"/></div>
                                    <div><i class="fa fa-user"/> <field name="vendedor_nombre"/></div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="precio_final" widget="monetary"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="estado" widget="label_selection" 
                                               options="{'classes': {'completada': 'success', 'pendiente': 'warning', 'confirmada': 'info'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Search de Compras -->
    <record id="view_compra_search" model="ir.ui.view">
        <field name="name">renaix.compra.search</field>
        <field name="model">renaix.compra</field>
        <field name="arch" type="xml">
            <search string="Buscar Compras">
                <field name="codigo"/>
                <field name="producto_id"/>
                <field name="comprador_id"/>
                <field name="vendedor_id"/>
                
                <filter string="Pendientes" name="pendientes" 
                        domain="[('estado', '=', 'pendiente')]"/>
                <filter string="Confirmadas" name="confirmadas" 
                        domain="[('estado', '=', 'confirmada')]"/>
                <filter string="Completadas" name="completadas" 
                        domain="[('estado', '=', 'completada')]"/>
                <filter string="Canceladas" name="canceladas" 
                        domain="[('estado', '=', 'cancelada')]"/>
                
                <separator/>
                
                <filter string="Sin valorar" name="sin_valorar" 
                        domain="['|', ('comprador_valoro', '=', False), ('vendedor_valoro', '=', False), ('estado', '=', 'completada')]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_estado" 
                            context="{'group_by': 'estado'}"/>
                    <filter string="Comprador" name="group_comprador" 
                            context="{'group_by': 'comprador_id'}"/>
                    <filter string="Vendedor" name="group_vendedor" 
                            context="{'group_by': 'vendedor_id'}"/>
                    <filter string="Fecha" name="group_fecha" 
                            context="{'group_by': 'fecha_compra'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de Ventana para Compras -->
    <record id="action_compra" model="ir.actions.act_window">
        <field name="name">Compras / Transacciones</field>
        <field name="res_model">renaix.compra</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_pendientes': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay compras registradas
            </p>
            <p>
                Las transacciones de compra-venta se registran aquí.<br/>
                Puedes confirmar, completar o cancelar transacciones.
            </p>
        </field>
    </record>

</odoo>