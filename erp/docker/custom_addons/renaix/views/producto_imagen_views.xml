<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista list de Im치genes de Producto -->
    <record id="view_producto_imagen_list" model="ir.ui.view">
        <field name="name">renaix.producto.imagen.list</field>
        <field name="model">renaix.producto.imagen</field>
        <field name="arch" type="xml">
            <list string="Im치genes de Productos">
                <field name="imagen_small" widget="image" width="75px"/>
                <field name="producto_id"/>
                <field name="secuencia" widget="handle"/>
                <field name="es_principal" widget="boolean_toggle"/>
                <field name="descripcion"/>
                <field name="tamano_kb"/>
            </list>
        </field>
    </record>

    <!-- Vista Form de Im치genes de Producto -->
    <record id="view_producto_imagen_form" model="ir.ui.view">
        <field name="name">renaix.producto.imagen.form</field>
        <field name="model">renaix.producto.imagen</field>
        <field name="arch" type="xml">
            <form string="Imagen de Producto">
                <sheet>
                    <group>
                        <field name="producto_id" readonly="1"/>
                        <field name="secuencia"/>
                        <field name="es_principal"/>
                        <field name="tamano_kb"/>
                    </group>
                    <group>
                        <field name="descripcion" placeholder="Descripci칩n opcional de la imagen"/>
                    </group>
                    <group string="Imagen">
                        <field name="imagen" widget="image" class="oe_avatar"/>
                    </group>
                    <group string="URL" invisible="not url_imagen">
                        <field name="url_imagen" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>