<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista list de Denuncias -->
    <record id="view_denuncia_list" model="ir.ui.view">
        <field name="name">renaix.denuncia.list</field>
        <field name="model">renaix.denuncia</field>
        <field name="arch" type="xml">
            <list string="Denuncias" 
                  decoration-danger="estado == 'pendiente'"
                  decoration-warning="estado == 'en_revision'"
                  decoration-success="estado == 'resuelta'">
                <field name="fecha_denuncia"/>
                <field name="tipo" widget="badge"/>
                <field name="denunciado_nombre"/>
                <field name="categoria"/>
                <field name="usuario_reportante_id"/>
                <field name="estado" 
                       decoration-danger="estado=='pendiente'" 
                       decoration-warning="estado=='en_revision'"
                       decoration-success="estado=='resuelta'"
                       widget="badge"/>
                <field name="empleado_asignado_id"/>
            </list>
        </field>
    </record>

    <!-- Vista Form de Denuncias -->
    <record id="view_denuncia_form" model="ir.ui.view">
        <field name="name">renaix.denuncia.form</field>
        <field name="model">renaix.denuncia</field>
        <field name="arch" type="xml">
            <form string="Denuncia">
                <header>
                    <field name="estado" widget="statusbar" 
                           statusbar_visible="pendiente,en_revision,resuelta"/>
                    <button name="action_asignar_a_mi" 
                            type="object" 
                            string="Asignarme" 
                            class="btn-primary"
                            invisible="estado != 'pendiente'"/>
                    <button name="action_resolver" 
                            type="object" 
                            string="Resolver" 
                            class="btn-success"
                            confirm="¿Marcar esta denuncia como resuelta?"
                            invisible="estado not in ['pendiente', 'en_revision']"/>
                    <button name="action_rechazar" 
                            type="object" 
                            string="Rechazar" 
                            class="btn-warning"
                            confirm="¿Rechazar esta denuncia?"
                            invisible="estado not in ['pendiente', 'en_revision']"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" 
                                type="object" 
                                name="action_view_producto" 
                                icon="fa-cube"
                                invisible="tipo != 'producto'">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Ver Producto</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="tipo" readonly="1" widget="badge"/>
                            <span> - </span>
                            <field name="denunciado_nombre" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Información">
                            <field name="tipo" readonly="1"/>
                            <field name="categoria" readonly="1"/>
                            <field name="usuario_reportante_id" readonly="1"/>
                            <field name="fecha_denuncia" readonly="1"/>
                        </group>
                        <group string="Gestión">
                            <field name="empleado_asignado_id"/>
                            <field name="fecha_resolucion" readonly="1" 
                                   invisible="not fecha_resolucion"/>
                        </group>
                    </group>
                    
                    <group string="Elemento Denunciado">
                        <field name="producto_id" readonly="1" 
                               invisible="tipo != 'producto'"/>
                        <field name="comentario_id" readonly="1" 
                               invisible="tipo != 'comentario'"/>
                        <field name="usuario_reportado_id" readonly="1" 
                               invisible="tipo != 'usuario'"/>
                    </group>
                    
                    <group string="Motivo de la Denuncia">
                        <field name="motivo" nolabel="1" readonly="1"/>
                    </group>
                    
                    <group string="Resolución" invisible="estado not in ['resuelta', 'rechazada']">
                        <field name="resolucion" nolabel="1" 
                               placeholder="Descripción de la acción tomada..."/>
                    </group>
                </sheet>
                
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Kanban de Denuncias -->
    <record id="view_denuncia_kanban" model="ir.ui.view">
        <field name="name">renaix.denuncia.kanban</field>
        <field name="model">renaix.denuncia</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="estado">
                <field name="tipo"/>
                <field name="denunciado_nombre"/>
                <field name="categoria"/>
                <field name="estado"/>
                <field name="empleado_asignado_id"/>
                <field name="fecha_denuncia"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="tipo" widget="badge"/>
                                            <span> - </span>
                                            <field name="denunciado_nombre"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="categoria"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="motivo"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="fecha_denuncia" widget="date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="empleado_asignado_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Search de Denuncias -->
    <record id="view_denuncia_search" model="ir.ui.view">
        <field name="name">renaix.denuncia.search</field>
        <field name="model">renaix.denuncia</field>
        <field name="arch" type="xml">
            <search string="Buscar Denuncias">
                <field name="tipo"/>
                <field name="categoria"/>
                <field name="usuario_reportante_id"/>
                <field name="empleado_asignado_id"/>
                
                <filter string="⚠️ Pendientes" name="pendientes" 
                        domain="[('estado', '=', 'pendiente')]"/>
                <filter string="En Revisión" name="en_revision" 
                        domain="[('estado', '=', 'en_revision')]"/>
                <filter string="Resueltas" name="resueltas" 
                        domain="[('estado', '=', 'resuelta')]"/>
                <filter string="Rechazadas" name="rechazadas" 
                        domain="[('estado', '=', 'rechazada')]"/>
                
                <separator/>
                
                <filter string="Sin asignar" name="sin_asignar" 
                        domain="[('empleado_asignado_id', '=', False)]"/>
                <filter string="Mis denuncias" name="mis_denuncias" 
                        domain="[('empleado_asignado_id', '=', uid)]"/>
                
                <separator/>
                
                <filter string="Productos" name="tipo_producto" 
                        domain="[('tipo', '=', 'producto')]"/>
                <filter string="Comentarios" name="tipo_comentario" 
                        domain="[('tipo', '=', 'comentario')]"/>
                <filter string="Usuarios" name="tipo_usuario" 
                        domain="[('tipo', '=', 'usuario')]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_estado" 
                            context="{'group_by': 'estado'}"/>
                    <filter string="Tipo" name="group_tipo" 
                            context="{'group_by': 'tipo'}"/>
                    <filter string="Categoría" name="group_categoria" 
                            context="{'group_by': 'categoria'}"/>
                    <filter string="Empleado Asignado" name="group_empleado" 
                            context="{'group_by': 'empleado_asignado_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de Ventana para Denuncias -->
    <record id="action_denuncia" model="ir.actions.act_window">
        <field name="name">Denuncias</field>
        <field name="res_model">renaix.denuncia</field>
        <field name="view_mode">kanban,list,form,graph</field>
        <field name="context">{'search_default_pendientes': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay denuncias
            </p>
            <p>
                Las denuncias realizadas por usuarios aparecerán aquí.<br/>
                Puedes asignarlas, revisarlas y resolverlas.
            </p>
        </field>
    </record>

</odoo>
