<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista list de Productos -->
    <record id="view_producto_list" model="ir.ui.view">
        <field name="name">renaix.producto.list</field>
        <field name="model">renaix.producto</field>
        <field name="arch" type="xml">
            <list string="Productos">
                <field name="image_128" widget="image" width="50px"/>
                <field name="name"/>
                <field name="categoria_id"/>
                <field name="propietario_id"/>
                <field name="precio" widget="monetary"/>
                <field name="estado_producto"/>
                <field name="estado_venta" decoration-success="estado_venta=='disponible'" 
                       decoration-warning="estado_venta=='reservado'" 
                       decoration-info="estado_venta=='vendido'"
                       widget="badge"/>
                <field name="ubicacion"/>
                <field name="fecha_publicacion"/>
                <field name="total_comentarios"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="currency_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Vista Form de Productos -->
    <record id="view_producto_form" model="ir.ui.view">
        <field name="name">renaix.producto.form</field>
        <field name="model">renaix.producto</field>
        <field name="arch" type="xml">
            <form string="Producto">
                <header>
                    <field name="estado_venta" widget="statusbar" 
                           statusbar_visible="borrador,disponible,reservado,vendido"/>
                    <button name="action_publicar" 
                            type="object" 
                            string="Publicar" 
                            class="oe_highlight"
                            invisible="estado_venta != 'borrador'"/>
                    <button name="action_reservar" 
                            type="object" 
                            string="Reservar"
                            invisible="estado_venta != 'disponible'"/>
                    <button name="action_marcar_vendido" 
                            type="object" 
                            string="Marcar como Vendido" 
                            class="oe_highlight"
                            invisible="estado_venta not in ['disponible', 'reservado']"/>
                </header>
                <sheet>
                    <!-- Botones estadísticos -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_comentarios" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-comments"
                                invisible="total_comentarios == 0">
                            <field name="total_comentarios" widget="statinfo" string="Comentarios"/>
                        </button>
                        <button name="action_view_denuncias" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-flag"
                                invisible="total_denuncias == 0">
                            <field name="total_denuncias" widget="statinfo" string="Denuncias"/>
                        </button>
                        <button name="toggle_active" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-archive">
                            <field name="active" widget="boolean_button" 
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <!-- Imagen principal -->
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="ej: iPhone 13 Pro, Bicicleta de montaña..."/>
                        </h1>
                        <div>
                            <field name="etiqueta_ids" widget="many2many_tags" 
                                   options="{'color_field': 'color', 'no_create_edit': True}"
                                   placeholder="Añadir etiquetas (máx 5)..."/>
                        </div>
                    </div>
                    
                    <group>
                        <group string="Información Básica">
                            <field name="propietario_id" 
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="categoria_id" 
                                   options="{'no_create_edit': True}"/>
                            <field name="precio" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="ubicacion" placeholder="Ciudad, CP..."/>
                        </group>
                        <group string="Estado del Producto">
                            <field name="estado_producto"/>
                            <field name="antiguedad" placeholder="ej: 6 meses, 2 años..."/>
                            <field name="fecha_publicacion"/>
                            <field name="dias_publicado"/>
                        </group>
                    </group>
                    
                    <group string="Información del Propietario">
                        <field name="propietario_email"/>
                        <field name="propietario_phone"/>
                    </group>
                    
                    <notebook>
                        <page string="Descripción">
                            <field name="descripcion" 
                                   placeholder="Describe tu producto en detalle: características, condición, motivo de venta, etc."/>
                        </page>
                        
                        <page string="Imágenes">
                            <group>
                                <field name="total_imagenes"/>
                                <label string="Mínimo 1 imagen, máximo 10" class="text-muted"/>
                            </group>
                            <field name="imagen_ids" mode="kanban">
                                <kanban>
                                    <field name="id"/>
                                    <field name="imagen"/>
                                    <field name="secuencia"/>
                                    <field name="es_principal"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="kanban_image('renaix.producto.imagen', 'imagen', record.id.raw_value)"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <strong t-if="record.es_principal.raw_value">⭐ Principal</strong>
                                                    <div>Orden: <field name="secuencia"/></div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <form>
                                    <sheet>
                                        <field name="imagen" widget="image"/>
                                        <group>
                                            <field name="secuencia"/>
                                            <field name="es_principal"/>
                                            <field name="descripcion"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        
                        <page string="Comentarios" invisible="total_comentarios == 0">
                            <field name="comentario_ids" readonly="1">
                                <list>
                                    <field name="usuario_id"/>
                                    <field name="texto"/>
                                    <field name="fecha"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Denuncias" invisible="total_denuncias == 0">
                            <field name="denuncia_ids" readonly="1">
                                <list>
                                    <field name="usuario_reportante_id"/>
                                    <field name="motivo"/>
                                    <field name="estado"/>
                                    <field name="fecha_denuncia"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Compra" invisible="not compra_id">
                            <field name="compra_id">
                                <form>
                                    <group>
                                        <field name="codigo"/>
                                        <field name="comprador_id"/>
                                        <field name="vendedor_id"/>
                                        <field name="fecha_compra"/>
                                        <field name="precio_final"/>
                                        <field name="estado"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Kanban de Productos -->
    <record id="view_producto_kanban" model="ir.ui.view">
        <field name="name">renaix.producto.kanban</field>
        <field name="model">renaix.producto</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="image_512"/>
                <field name="name"/>
                <field name="precio"/>
                <field name="estado_venta"/>
                <field name="propietario_id"/>
                <field name="categoria_id"/>
                <field name="etiqueta_ids"/>
                <field name="total_comentarios"/>
                <field name="currency_id"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('renaix.producto', 'image_512', record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="categoria_id"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="etiqueta_ids" widget="many2many_tags" 
                                           options="{'color_field': 'color'}"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="precio" widget="monetary"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="estado_venta" widget="label_selection" 
                                               options="{'classes': {'disponible': 'success', 'reservado': 'warning', 'vendido': 'info'}}"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom mt8">
                                    <div class="oe_kanban_bottom_left">
                                        <span><i class="fa fa-user"/> <field name="propietario_id"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right" t-if="record.total_comentarios.raw_value > 0">
                                        <span><i class="fa fa-comments"/> <field name="total_comentarios"/></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Search de Productos -->
    <record id="view_producto_search" model="ir.ui.view">
        <field name="name">renaix.producto.search</field>
        <field name="model">renaix.producto</field>
        <field name="arch" type="xml">
            <search string="Buscar Productos">
                <field name="name" string="Producto" 
                       filter_domain="[('name', 'ilike', self)]"/>
                <field name="propietario_id"/>
                <field name="categoria_id"/>
                <field name="etiqueta_ids"/>
                <field name="ubicacion"/>
                
                <filter string="Borradores" name="borrador" 
                        domain="[('estado_venta', '=', 'borrador')]"/>
                <filter string="Disponibles" name="disponible" 
                        domain="[('estado_venta', '=', 'disponible')]"/>
                <filter string="Reservados" name="reservado" 
                        domain="[('estado_venta', '=', 'reservado')]"/>
                <filter string="Vendidos" name="vendido" 
                        domain="[('estado_venta', '=', 'vendido')]"/>
                
                <separator/>
                
                <filter string="Activos" name="activos" 
                        domain="[('active', '=', True)]"/>
                <filter string="Archivados" name="archivados" 
                        domain="[('active', '=', False)]"/>
                
                <separator/>
                
                <filter string="Con Comentarios" name="con_comentarios" 
                        domain="[('total_comentarios', '>', 0)]"/>
                <filter string="Con Denuncias" name="con_denuncias" 
                        domain="[('total_denuncias', '>', 0)]"/>
                
                <separator/>
                
                <filter string="Precio bajo" name="precio_bajo" 
                        domain="[('precio', '&lt;', 50)]"/>
                <filter string="Precio medio" name="precio_medio" 
                        domain="[('precio', '&gt;=', 50), ('precio', '&lt;', 200)]"/>
                <filter string="Precio alto" name="precio_alto" 
                        domain="[('precio', '&gt;=', 200)]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Categoría" name="group_categoria" 
                            context="{'group_by': 'categoria_id'}"/>
                    <filter string="Estado Venta" name="group_estado_venta" 
                            context="{'group_by': 'estado_venta'}"/>
                    <filter string="Propietario" name="group_propietario" 
                            context="{'group_by': 'propietario_id'}"/>
                    <filter string="Fecha Publicación" name="group_fecha" 
                            context="{'group_by': 'fecha_publicacion'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de Ventana para Productos -->
    <record id="action_producto" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">renaix.producto</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{
            'search_default_activos': 1,
            'search_default_disponible': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear primer producto
            </p>
            <p>
                Los productos de segunda mano publicados por los usuarios se gestionan aquí.<br/>
                Puedes moderar, comentar y realizar acciones sobre los productos.
            </p>
        </field>
    </record>

    <!-- Añadir al menú -->
    <menuitem id="menu_renaix_productos"
              name="Productos"
              parent="menu_renaix_root"
              action="action_producto"
              sequence="20"/>

</odoo>