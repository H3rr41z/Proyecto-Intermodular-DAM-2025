<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista Tree (Lista) de Categorías -->
    <record id="view_categoria_tree" model="ir.ui.view">
        <field name="name">renaix.categoria.tree</field>
        <field name="model">renaix.categoria</field>
        <field name="arch" type="xml">
            <tree string="Categorías" default_order="sequence,name">
                <field name="sequence" widget="handle"/>
                <field name="image" widget="image" width="50px"/>
                <field name="name"/>
                <field name="descripcion"/>
                <field name="producto_count"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form (Formulario) de Categorías -->
    <record id="view_categoria_form" model="ir.ui.view">
        <field name="name">renaix.categoria.form</field>
        <field name="model">renaix.categoria</field>
        <field name="arch" type="xml">
            <form string="Categoría">
                <header>
                    <button name="action_view_productos" 
                            type="object" 
                            string="Ver Productos" 
                            class="oe_highlight"
                            invisible="producto_count == 0"/>
                </header>
                <sheet>
                    <!-- Imagen grande a la izquierda -->
                    <field name="image" widget="image" class="oe_avatar"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="ej: Electrónica, Ropa, Muebles..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="producto_count"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Descripción">
                            <field name="descripcion" placeholder="Descripción detallada de la categoría..."/>
                        </page>
                        <page string="Productos" invisible="producto_count == 0">
                            <field name="producto_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="precio" widget="monetary"/>
                                    <field name="propietario_id"/>
                                    <field name="estado_venta"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Kanban de Categorías -->
    <record id="view_categoria_kanban" model="ir.ui.view">
        <field name="name">renaix.categoria.kanban</field>
        <field name="model">renaix.categoria</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="image"/>
                <field name="name"/>
                <field name="producto_count"/>
                <field name="color"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" t-att-style="'border-left: 3px solid ' + kanban_color(record.color.raw_value)">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('renaix.categoria', 'image', record.id.raw_value)" alt="Categoría"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <i class="fa fa-shopping-cart"/> 
                                    <field name="producto_count"/> productos
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="sequence"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Search (Búsqueda y Filtros) -->
    <record id="view_categoria_search" model="ir.ui.view">
        <field name="name">renaix.categoria.search</field>
        <field name="model">renaix.categoria</field>
        <field name="arch" type="xml">
            <search string="Buscar Categorías">
                <field name="name" string="Categoría" 
                       filter_domain="[('name', 'ilike', self)]"/>
                <field name="descripcion"/>
                
                <filter string="Activas" name="active" 
                        domain="[('active', '=', True)]"/>
                <filter string="Inactivas" name="inactive" 
                        domain="[('active', '=', False)]"/>
                
                <separator/>
                
                <filter string="Con Productos" name="con_productos" 
                        domain="[('producto_count', '>', 0)]"/>
                <filter string="Sin Productos" name="sin_productos" 
                        domain="[('producto_count', '=', 0)]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_active" 
                            context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de Ventana para Categorías -->
    <record id="action_categoria" model="ir.actions.act_window">
        <field name="name">Categorías</field>
        <field name="res_model">renaix.categoria</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear primera categoría
            </p>
            <p>
                Las categorías permiten clasificar los productos.<br/>
                Ejemplos: Electrónica, Ropa, Muebles, Deportes, Libros, etc.
            </p>
        </field>
    </record>

</odoo>